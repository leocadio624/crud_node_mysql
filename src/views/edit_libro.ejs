<%- include('partials/_header.ejs') %>

<div class = "container">
    <div class = "row mt-5">
        <div class = "col-md-5">            
            <div class = "card">
                <div class = "card-body">
                    
                    <form action = "/update/<%= data.id %>" method = "post" >
                        <div class = "form-group" >
                            <input type = "text" name = "isbn" value = "<%= data.isbn %>" placeholder = "ISBN" class = "form-control" />
                        </div>
                        <br/>
                        <div class = "form-group" >
                            <input type = "text" name = "titulo" value = "<%= data.titulo %>" placeholder = "Titulo" class = "form-control" />
                        </div>
                        <br/>
                        <div class = "form-group" >
                            <input type = "text" name = "nombreEditorial" value = "<%= data.nombreEditorial %>" placeholder = "Editorial" class = "form-control" />
                        </div>
                        <br/>
                        <button type = "submit" class = "btn btn-primary">
                            Actualizar
                        </button>
                    </form>
        
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer.ejs') %>
